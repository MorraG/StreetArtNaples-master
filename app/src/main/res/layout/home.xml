<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/textSize_S"
        android:layout_marginTop="@dimen/paddingOrMar_M"
        android:scaleType="fitCenter"
        android:src="@drawable/headerhome" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="@dimen/paddingOrMar_M"
        android:gravity="top|center"
        android:text="@string/homeDescription"
        android:textSize="@dimen/paddingOrMar_L"
        app:fontFamily="@font/anaheim" />


</LinearLayout>